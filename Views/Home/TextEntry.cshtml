@{
    ViewData["Title"] = "Textile Entry Page";
}

<div class="">
    <h1 class="display-4">Textile Entry</h1>
</div>


<form>
    <div class="row">
        <div class="col-3">
            <label for="">Textile Burial #:</label>
            <input type="number" class="form-control" id="" placeholder="Textile Burial #">
        </div>
        <div class="col-3">
            <label for="">Est. Date:</label>
            <input type="number" class="form-control" id="" placeholder="Est. Date">
        </div>
        <div class="col-3">
            <label for="">Head Direction</label>
            <select class="form-control" id="">
                <option>Choose...</option>
                <option>N</option>
                <option>E</option>
                <option>S</option>
                <option>W</option>
                <option>Other</option>
            </select>
        </div>
        <div class="col-3">
            <label for="">Locale:</label>
            <input type="text" class="form-control" id="" placeholder="Locale">
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <label for="">Photo Date:</label>
            <input type="number" class="form-control" id="" placeholder="Photo Date">
        </div>
        <div class="col-3">
            <label for="">Sample Date:</label>
            <input type="number" class="form-control" id="" placeholder="Sample Date">
        </div>
        <div class="col-3">
            <label for="">Scientific Testing Date:</label>
            <input type="number" class="form-control" id="" placeholder="Scientific Testing Date">
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label for="">Analysis Date:</label>
            <input type="date" class="form-control" id="" placeholder="Analysis Date">
        </div>
        <div class="col-2">
            <label for="">Analysis Type:</label>
            <select class="form-control" id="">
                <option>Choose...</option>
                <option>Field</option>
                <option>Lab</option>
            </select>
        </div>
        <div class="col-3">
            <label for="">Analysis By:</label>
            <input type="text" class="form-control" id="" placeholder="Analysis By">
        </div>
        <div class="col-5">
            <label for="">Structure:</label>
            <input type="text" class="form-control" id="" placeholder="Structure">
        </div>

        <div class="row">
            <div class="col-3">
                <label for="">Dimensions (cm x cm):</label>
                <div>
                    <label for="">Warp:</label>
                    <input type="number" class="form-control" id="" placeholder="Warp">
                </div>
                <div>
                    <label for="">Weft:</label>
                    <input type="number" class="form-control" id="" placeholder="Weft">
                </div>
                <div>
                    <label for="">Loomstring end:</label>
                    <input type="number" class="form-control" id="" placeholder="Loomstring end">
                </div>
                <div>
                    <label for="">Selvedges:</label>
                    <input type="number" class="form-control" id="" placeholder="Selvedges">
                </div>
                <div>
                    <label for="">Fringe:</label>
                    <input type="number" class="form-control" id="" placeholder="Fring">
                </div>
                <div>
                    <label for="">Other:</label>
                    <input type="number" class="form-control" id="" placeholder="Other">
                </div>
            </div>
            <div class="col-3">
                <label for="">Function</label>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Tunic</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Blanket/Shroud</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Belt</label>
                </div>
                                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Ribbon</label>
                </div>
                                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Head covering</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Face bundle</label>
                </div>
                                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Fragmentary/Unknown</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Other</label>
                </div>
            </div>
            <div class="col-3">
                <label for="">Decorations</label>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Clavi</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Roundels</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Warp stripes</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Weft bands</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Animal motifs</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Plant motifs</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Abstract motifs</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Human motifs</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="">
                    <label class="form-check-label" for="">Other</label>
                </div>
            </div>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Sign in</button>
</form>